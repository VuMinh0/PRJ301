<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>AuthenticationRequired</filter-name>
        <filter-class>filter.AuthenticationRequired</filter-class>
    </filter>
    <filter>
        <filter-name>LecturerRequired</filter-name>
        <filter-class>filter.LecturerRequired</filter-class>
    </filter>
    <filter>
        <filter-name>StudentRequired</filter-name>
        <filter-class>filter.StudentRequired</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationRequired</filter-name>
        <url-pattern>/lecturer/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthenticationRequired</filter-name>
        <url-pattern>/student/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>StudentRequired</filter-name>
        <url-pattern>/student/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LecturerRequired</filter-name>
        <url-pattern>/lecturer/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IndexController</servlet-name>
        <servlet-class>controller.IndexController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LecturerHomeController</servlet-name>
        <servlet-class>controller.lecturer.HomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentScheduleController</servlet-name>
        <servlet-class>controller.student.ScheduleController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LecturerScheduleController</servlet-name>
        <servlet-class>controller.lecturer.ScheduleController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AttendanceController</servlet-name>
        <servlet-class>controller.lecturer.AttendanceController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IndexController</servlet-name>
        <url-pattern/>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LecturerHomeController</servlet-name>
        <url-pattern>/lecturer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentScheduleController</servlet-name>
        <url-pattern>/student/schedule</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LecturerScheduleController</servlet-name>
        <url-pattern>/lecturer/schedule</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AttendanceController</servlet-name>
        <url-pattern>/lecturer/attendance</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
